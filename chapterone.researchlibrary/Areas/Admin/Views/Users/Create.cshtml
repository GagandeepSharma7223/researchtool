@using Microsoft.AspNetCore.Identity
@model chapterone.shared.models.UserModel
@inject RoleManager<chapterone.web.identity.ApplicationRole> RoleManager

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	var roles = RoleManager.Roles.Select(x => new SelectListItem
	{
		Value = x.Id,
		Text = x.Name
	}).ToList();
}


<div class="small-container col-4 offset-4">
	<h3 class="text-center">Create User</h3>
	<br />

	@if (ViewBag.Message != null)
	{
		<div class="alert alert-success">@ViewBag.Message</div>
	}

	<form method="post">
		<div class="form-group">
			<label asp-for="@Model.Name" class="control-label"></label>
			<input asp-for="@Model.Name" class="form-control" tabindex="1" />
			<span asp-validation-for="@Model.Name" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.Email" class="control-label"></label>
			<input asp-for="@Model.Email" class="form-control" tabindex="2" />
			<span asp-validation-for="@Model.Email" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.RoleId" class="control-label"></label>
			<select class="form-control" asp-for="@Model.RoleId" asp-items="@roles" tabindex="3">
			</select>
			<span asp-validation-for="@Model.RoleId" class="text-danger"></span>
		</div>
		@*<div class="form-group">
			<label asp-for="@Model.Password" class="control-label"></label>
			<input asp-for="@Model.Password" class="form-control" tabindex="4" />
			<span asp-validation-for="@Model.Password" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.ConfirmPassword"></label>
			<input asp-for="@Model.ConfirmPassword" class="form-control" type="password" tabindex="5" />
			<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
		</div>*@
		<button type="submit" class="btn btn-primary">Create</button>
	</form>
</div>